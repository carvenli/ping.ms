extends ../layout
block append js
  script(src='/js/table.js')
block content
  .container
    +tableHeader('Staff','/staff/create','Create Staff')
    +alerts()
    form(method='post', role='form')
      table.table.table-striped
        tr
          th
            input#toggle(type='checkbox')
          th Full Name
          th Email
          th Last Login
          th Active
        each row,i in list
          tr
            td
              input(type='checkbox', name='remove[]', value=row.id)
            td
              a(href='/staff/edit?id=#{row.id}')= row.name
            td= row.email
            td
              if row.metrics.dateSeen
                div.text-success= new Date(row.metrics.dateSeen).toDateString()
              if row.metrics.dateFail
                div.text-danger= new Date(row.metrics.dateFail).toDateString()
            td
              span.glyphicon.glyphicon-align-center(class='glyphicon-'+(row.active?'ok-circle text-success':'ban-circle text-danger'))
      +tableFooter(page,count)
