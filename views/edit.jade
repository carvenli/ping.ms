extends layout
block content
  .container
    h1 Update Entry
    if alert
      .alert.alert-danger= alert
    form.form-horizontal(action='/save', method='post', role='form')
      input(type='hidden', name='id', value=id)
      .form-group
        label.control-label.col-sm-2 Full Name
        .col-sm-10
          input.form-control(type='text', name='name', placeholder='Full Name', value=name)
      .form-group
        label.control-label.col-sm-2 Company
        .col-sm-10
          input.form-control(type='text', name='company', placeholder='Company', value=company)
      .form-group
        label.control-label.col-sm-2 Email
        .col-sm-10
          input.form-control(type='email', name='email', placeholder='Email Address', value=email)
      .form-group
        label.control-label.col-sm-2 Address
        .col-sm-10
          input.form-control(type='text', name='address', placeholder='Address', value=address)
      .form-group
        label.control-label.col-sm-2 Phone
        .col-sm-10
          input.form-control(type='text', name='phone', placeholder='Phone', value=phone)
      .form-group
        label.control-label.col-sm-2 Rank
        .col-sm-10
          select(name='rank')
            each i in [1,2,3]
              option(selected=(i == rank))= i
      .form-group
        .col-sm-offset-2.col-sm-10
          button.btn.btn-success(type='submit') Save